<style type="text/css">
    .border-blue {
        border-color: dodgerblue;
        border-style: double;
    }
</style>
<body>

<div class="container">
    <form action="/" class="border border-blue p-5">
        <p class="h4 mb-4 text-center">Войти</p>
        <input class="form-control mb-4" id="defaultLoginFormEmail" placeholder="Имя пользователя" type="email">
        <input class="form-control mb-4" id="defaultLoginFormPassword" placeholder="Пароль" type="password">
        <div class="d-flex justify-content-between">
            <div>
                <div class="custom-control custom-checkbox">
                    <input class="custom-control-input" id="defaultLoginFormRemember" type="checkbox">
                    <label class="custom-control-label" for="defaultLoginFormRemember">Помни меня</label>
                </div>
            </div>
            <div>
                <a href="">Забыли пароль?</a>
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-info my-4 flex-center" type="submit">Войти</button>
        </div>
    </form>
</div>

